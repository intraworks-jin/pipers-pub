<section class="canarystrap-section canarystrap-bg-white" data-section="contact">
	<div class="container">
		<div class="row">
			<div class="col-md-5 text-center canarystrap-animate">
				<div class="canarystrap-heading dark">
					<h1 class="primary-heading">Contact</h1>
